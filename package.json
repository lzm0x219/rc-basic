  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "@types/react-dom": {
      "optional": true
    },
    "react-polymorphed": {
      "optional": true
    }
  },
  "packageManager": "pnpm@9.14.2",
