{
  "name": "rc-basic",
  "version": "1.1.0",
  "description": "ðŸ˜Ž A react basic component library.",
  "keywords": [
    "react",
    "react-component",
    "rc-basic"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lzm0x219/rc-basic"
  },
  "license": "MIT",
  "author": "lzm0x219",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/umd/rc-basic.min.js",
      "import": "./dist/index.js"
    },
    "./dist/*": "./dist/*"
  },
  "main": "./dist/umd/rc-basic.min.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "prebuild": "pnpm clean",
    "build": "father build",
    "dev": "tsc -w",
    "preinstall": "npx only-allow pnpm -y",
    "prepare": "is-ci || husky install",
    "preversion": "pnpm build",
    "postversion": "git push --follow-tags"
  },
  "lint-staged": {
    "*.{ts,tsx,js,cjs}": [
      "rome format --write",
      "rome check"
    ],
    "*.{md,html,css,json,yml}": "prettier --write",
    "!(*pnpm-lock).yaml": "prettier --write",
    "package.json": "pnpm sort-package-json"
  },
  "devDependencies": {
    "@babel/preset-react": "7.22.5",
    "@types/react": "18.2.8",
    "@types/react-dom": "18.2.4",
    "father": "4.2.3",
    "husky": "8.0.3",
    "is-ci": "3.0.1",
    "lint-staged": "13.2.3",
    "prettier": "2.8.8",
    "prettier-plugin-packagejson": "2.4.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-polymorphic-types": "2.0.0",
    "rome": "12.1.3",
    "sort-package-json": "2.5.0",
    "typescript": "5.1.6"
  },
  "peerDependencies": {
    "@types/react": "18.x",
    "@types/react-dom": "18.x",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "react-polymorphic-types": "^2.0.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "@types/react-dom": {
      "optional": true
    },
    "react-polymorphic-types": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=14.18.0",
    "pnpm": ">=7.0.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "webpack",
        "@babel/core"
      ]
    }
  }
}
