{
  "name": "rc-basic",
  "version": "1.0.2",
  "description": "ðŸ˜Ž A react basic component library.",
  "keywords": [
    "react",
    "react-component",
    "rc-basic"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/lzm0x219/rc-basic"
  },
  "license": "MIT",
  "author": "lzm0x219",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "src",
    "typings"
  ],
  "scripts": {
    "prebuild": "pnpm clean",
    "build": "del dist && tsc --project ./tsconfig.build.json && pnpm api-extractor run --local --verbose",
    "dev": "tsc -w",
    "preinstall": "npx only-allow pnpm -y",
    "prepare": "is-ci || husky install",
    "preversion": "pnpm build",
    "postversion": "git push --follow-tags"
  },
  "lint-staged": {
    "*.{ts,tsx,js,cjs}": [
      "rome format --write",
      "rome check"
    ],
    "*.{md,html,css,json,yml}": "prettier --write",
    "!(*pnpm-lock).yaml": "prettier --write",
    "package.json": "pnpm sort-package-json"
  },
  "devDependencies": {
    "@microsoft/api-extractor": "7.33.6",
    "@types/react": "18.0.25",
    "@types/react-dom": "18.0.9",
    "del-cli": "5.0.0",
    "husky": "8.0.2",
    "is-ci": "3.0.1",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "prettier-plugin-packagejson": "2.3.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-polymorphic-types": "2.0.0",
    "rome": "10.0.1",
    "sort-package-json": "2.1.0",
    "typescript": "4.9.3"
  },
  "peerDependencies": {
    "@types/react": "18.x",
    "@types/react-dom": "18.x",
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0",
    "react-polymorphic-types": "^2.0.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    },
    "@types/react-dom": {
      "optional": true
    },
    "react-polymorphic-types": {
      "optional": true
    }
  }
}
