    "father": "4.5.1",
    "husky": "9.1.7",
    "is-ci": "3.0.1",
    "lint-staged": "15.2.10",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "react-polymorphed": "2.2.2",
    "sort-package-json": "2.11.0",
